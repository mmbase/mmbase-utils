<?xml version="1.0"?>
<!DOCTYPE util PUBLIC "-//MMBase//DTD util config 1.0//EN" "http://www.mmbase.org/dtd/util_1_0.dtd">
<util>
  <properties>
    <!-- 
         Whether to validate documents (if requested). Corresponding to constructors of DocumentReader with 'validating' arguments.
         
         Values:
         true: validate if not specified whether to validate.
         false: dont' validate if not specified whether to validate.
         never: never validate, not even if speficied to validate.
    -->
    <property name="validate">true</property>     
  </properties>
</util>
